{
    "name": "ChatTree",
    "description": "Tree view of your ChatGPT conversations",
    "version": "0.0.1",
    "manifest_version": 3,
    "icons": {
        "16": "logo16.png",
        "48": "logo48.png",
        "128": "logo128.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "logo16.png",
            "48": "logo48.png",
            "128": "logo128.png"
        }
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "storage",
        "tabs",
        "webRequest",
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "https://chatgpt.com/backend-api/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    },
    "web_accessible_resources": [{
        "resources": ["logo16.png", "logo48.png", "logo128.png"],
        "matches": ["https://chat.openai.com/*"]
    }]
}
